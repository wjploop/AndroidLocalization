<idea-plugin>
    <id>com.wjp.AndroidLocalization</id>
    <name>Android Translate</name>
    <vendor email="wjploop@163.com" url="wjploop.github.io">wjploop</vendor>

    <description><![CDATA[
    <p>This is helper for you to translate the strings.xml content to other languages. </p>
    <p>Use Baidu Translate Service </p>
    <p>Filter the srtring item that have been translated </p>
    ]]></description>

    <idea-version since-build="131"/>

    <depends>com.intellij.modules.lang</depends>


    <extensions defaultExtensionNs="com.intellij">
<!--         Add your extensions here -->
    </extensions>

    <actions>
        <action id="com.wjp.actions.TranslateAction" class="com.wjp.actions.TranslateAction" text="TranslateAction">
            <add-to-group group-id="ProjectViewPopupMenu"  anchor="last"/>
        </action>
    </actions>
</idea-plugin>